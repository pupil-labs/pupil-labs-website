#Blog
  // background linear-gradient(to bottom, rgba(255,255,255,1) 5%, rgba(255,255,255,.0001), rgba(0,0,0,.35))

.Blog-row
  &:nth-child(even)
    background #f5f5f5

.Blog-pageTitle
  background transparent
  
.Blog-articleLink
  // 

.Blog-article
  padding 5em
  background transparent
  transition color .3s ease-in-out, background .3s ease-in-out
  
  &:active
    background $link-hover-color  

  @media $break-767
    padding 3em .8em 3em .8em

.Blog-article-intro
  padding-left 2em
  @media $break-767
    padding-left 0em
    
.Blog-article-header
  padding 1.5em 0em

.Blog-article-title
  color $gray-darker
  font-size 2em

.Blog-article-subtitle
  color $gray
  
    
.no-touch
  .Blog-article
    &:hover
      background rgba(0,0,0,.5)
      
      .Blog-article-title      
        color lighten($gray-darker,90%)
      .Blog-article-subtitle
        color lighten($gray,70%)
      .Blog-article-date
        color lighten($text-color,70%)
    &:active
      transition none
      background darken($link-hover-color,25%)  


.Blog-article-date
  color $text-color
  
.Blog-content *  
    color invert($text-color)
  
.Blog-content h2
  color darken(#fff,5%)
  
.Blog-nav
  padding 3em 3em
  
.Blog-nav-link
  font-family $font-family-sans-serif
  font-weight 700
  transition color .4s ease
  letter-spacing .01em  
  text-align center 
  
  @media $break-767
    // big screen
    font-size 1.1em 
    
  @media $break-767
    // small screen
    font-size 1.05em 
    
