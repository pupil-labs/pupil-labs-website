
#Blog
  // background linear-gradient(to bottom, rgba(255,255,255,1) 5%, rgba(255,255,255,.0001), rgba(0,0,0,.35))

.Blog-row
  &:nth-child(even)
    background #f5f5f5

.Blog-pageTitle
  background transparent
  
.Blog-articleLink
  // 

.Blog-article
  padding 5em
  background transparent
  transition color .3s ease-in-out, background .3s ease-in-out
  
  &:active
    background $link-hover-color  

  @media $break-767
    padding 3em .8em 3em .8em

.Blog-article-intro
  padding-left 2em
  @media $break-767
    padding-left 0em
    
.Blog-article-header
  padding-bottom 5em
  padding-top 1em

.Blog-article-title
  padding-bottom 0.1em
  color #666

.Blog-article-subtitle
  color $gray
  
    
.no-touch
  .Blog-article
    &:hover
      background rgba(0,0,0,.5)
      
      .Blog-article-title      
        color darken(#666, 30%)
      .Blog-article-subtitle
        color lighten($gray,70%)
      .Blog-article-date
        color lighten($text-color,70%)
    &:active
      transition none
      background darken($link-hover-color,25%)  


.Blog-article-date
  color $text-color
  
.Blog-content *  
    color invert($text-color)
  
.Blog-content h2
  color darken(#fff,5%)
  
.Blog-nav
  padding 3em 3em
  
.Blog-nav-link
  transition color .4s ease
  letter-spacing .01em  
  text-align center 
  

//- NAT CLASS

.Background-header-text
  // line-height 1em
  color #ffffff
  font-size $heading-font-size
  line-height $heading-font-size * 0.5
  font-weight normal
  padding-bottom 20px
  
.Top-post-header
  color #ffffff
  padding-bottom 1em

.Background-caption-text-button
  // line-height 1em
  background-color white
    // color: black;
  border 2px solid #ffffff
  display inline-block
  text-align center
  padding 5px 15px
  margin 4px 2px
  border-radius 4px

.Circle-tag
  width 13em
  height 13em
  background #ededed
  border-radius 50%
  
  @media $break-767
    width 8em
    height 8em
    
  @media $break-767-height
    width 8em
    height 8em
  
.Tag-inner
  text-align center
  margin auto
  
.Icon-tag
  font-size 3em
  margin .1em
  
  @media $break-767
    font-size 1.5em
      
  @media $break-767-height
    font-size 1.5em


.Caption-tag
  font-size 1.5em
  margin 0 0 .5em
  
  @media $break-767
    font-size 1.3em
