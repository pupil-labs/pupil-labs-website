// see Phillip Walton's post: http://philipwalton.github.io/solved-by-flexbox/demos/grids/
// Grid

.Grid
  display flex
  flex-wrap wrap
  list-style none
  margin 0
  // padding 0
  &.banner-row
    @media $break-767
      flex-direction row
      flex-wrap unset
      font-size 14px

.Grid-noWrap
  display flex
  flex-wrap nowrap
  list-style none
  margin 0
  padding 0
  overflow hidden


.Grid-noWrap--breakSmall
  @media $break-767
    flex-wrap wrap

.Grid-cell
  flex 1 0 auto

  &.grid-0-5
    flex 0 0 5%
    max-width 5%
  &.grid-1
    flex 0 0 10%
    max-width 10%
  &.grid-2
    flex 0 0 20%
    max-width 20%
  &.grid-2-5
    flex 0 0 25%
    max-width 25%
  &.grid-3
    flex 0 0 30%
    max-width 30%
  &.grid-4
    flex 0 0 40%
    max-width 40%
  &.grid-5
    flex 0 0 50%
    max-width 50%
  &.grid-6
    flex 0 0 60%
    max-width 60%
  &.grid-7
    flex 0 0 70%
    max-width 70%
  &.grid-7-5
    flex 0 0 75%
    max-width 75%
  &.grid-8
    flex 0 0 80%
    max-width 80%
  &.grid-9
    flex 0 0 90%
    max-width 90%
  &.grid-9-5
    flex 0 0 95%
    max-width 95%

  @media $break-767
    &.grid-2-5
      flex 0 0 100%
      max-width 100%
    &.grid-7-5
      flex 0 0 100%
      max-width 100%
    &.grid-7
      flex 0 0 100%
      max-width 100%
    &.grid-3
        flex 0 0 100%
        max-width 100%
    &.grid-4
        flex 0 0 100%
        max-width 100%
    &.grid-6
        flex 0 0 100%
        max-width 100%
        padding-bottom .6em
        padding-top unset
    &.Grid-cell.grid-6
        padding-bottom .6em
        padding-top unset


.Grid-cell--noFlex
  flex none

.Grid-cell--auto
  flex 0 0 auto

.Grid--flexCells
  > .Grid-cell
    display flex

.Grid--top
  align-items flex-start

.Grid--bottom
  align-items flex-end

.Grid--center
  align-items center

.Grid--baseline
  align-items baseline

.Grid--stretch
  align-items stretch

.Grid--justifyCenter
  justify-content center

.Grid--justifySpaceAround
  justify-content space-around

.Grid--justifySpaceBetween
  justify-content space-between

.Grid--justifyFlexEnd
  justify-content flex-end

.Grid--alignContentCenter
  align-content center

.Grid-cell--top
  align-self flex-start

.Grid-cell--bottom
  align-self flex-end

.Grid-cell--center
  align-self center

.Grid-column
  flex-direction column

.Grid-row
  flex-direction row

.Grid-cell--autoSize
  flex none

.Grid-cell--1of2
  flex 0 0 50%

  @media $break-767
    flex 0 0 100%

.Grid-cell--1of3
  flex 0 0 (1/3)*100%
  @media $break-767
    flex 0 0 100%

.Grid-cell--1of3-no-break
  flex 0 0 (1/3)*100%

.Grid-cell--1of6
  flex 0 0 (1/6)*100%

.Grid-cell--5of6
  flex 0 0 (5/6)*100%

.Grid-cell--2of3
  flex 0 0 (2/3)*100%
  @media $break-767
    flex 0 0 100%

.Grid-cell--main
  flex 1 0

.Grid-cell--sidebar
  flex 1 0 20%
  max-width 20%

  @media $break-767
    flex 1 0 5%
    max-width 5%

.Grid-cell--sidebar-sm
  flex 0 0 8%
  max-width 8%

  @media $break-767
    flex 0 0 5%
    max-width 5%


.Grid-cell--cartFormula
  @media $break-767
    flex 0 0 100%
    width 100%

.Grid--cartFormula-break
  align-items center

  @media $break-767
    flex-direction column
    align-items stretch


.Grid-cell--cartSum
  @media $break-767
    border-top 1px solid gray
    margin-top .5em
    padding-bottom .5em
    flex 0 0 100%
    width 100%

.Grid--rowReverse
  flex-direction row-reverse

.Grid-cell--fillHeight
  display flex

.Grid--fit
  > .Grid-cell
    flex 1

.Grid-cell--full
  flex 0 0 100%
  max-width 100%


.Grid--full
  > .Grid-cell
    flex 0 0 100%
    max-width 100%


.Grid--1of2
  > .Grid-cell
    flex 0 0 50%
    // firefox fix below
    max-width 50%

    @media $break-767
      flex 0 0 100%
      max-width 100%

.Grid--1of2--breakConfig
  > .Grid-cell
    flex 0 0 50%
    // firefox fix below
    max-width 50%

    @media $break-767
      flex 0 0 100%
      max-width 100%

  //NAT_CLASS
.Grid-pad--1of2
  > .Grid-cell
    flex 0 0 50%
    // firefox fix below
    max-width 50%
    padding 0em 2em 0em 0em

    @media $break-767
      flex 0 0 100%
      max-width 100%

.Grid--1of3
  > .Grid-cell
    flex 0 0 33.3333%
    // firefox fix below
    max-width 33.3333%


    @media $break-767
      flex 0 0 100%
      max-width 100%


.Grid--1of4
  > .Grid-cell
    flex 0 0 25%
    max-width 25%

    @media $break-767
      flex 0 0 100%
      max-width 100%

  &.Customer-desktop

    @media $break-320
      display none !important

  &.Customer-mobile
    > .Grid-cell
        display none !important

      @media $break-320
        .Grid-cell
          flex 0 0 33.33333%
          display flex !important

          > picture > img
              width 60px

.Grid-cell--header
  font-weight 700

  @media $break-767
    font-size .8em

.Grid-cell--borderBottom
  border-bottom 1px solid black

.Grid--gutters
  margin -1em 0 0em -1em
  // padding 2em 0em

  @media $break-320
    margin 0em


.Grid--gutters-noMargin
  margin 0 1em

.Grid--gutters
.Grid--gutters-noMargin
  > .Grid-cell
    padding 1em 0 0 1em

    @media $break-767
      flex 0 0 100%
      max-width 100%

.Grid--gutters-sm
  > .Grid-cell
    padding 1em 2em 1em 2em

.Grid--gutters-lg
  > .Grid-cell
    padding 2em 2em 2em 2em

  // > .Aligner-item
  //  padding 2em 4em 4em 4em

  //  @media $break-767
  //    padding 2em 0em 2em 0em

  > .Aligner-item--1of2
    padding 2em 3em 2em 3em

.Aligner
  display flex
  flex-wrap wrap

.Aligner-item--1of2
  display flex
  flex 0 0 50%
  max-width 50%
  padding 1em 0em 0em 1em

  @media $break-767
    flex 0 0 100%
    max-width 100%

.Aligner-item--1of3
  display flex
  flex 0 0 33.3333%
  max-width 33.3333%
  padding 1em 0em 0em 1em

  @media $break-767
    flex 0 0 100%
    max-width 100%

.Aligner-item
  display flex
  flex 0 0 50%
  max-width 50%
  padding 4em 1.4em 2em 1.4em

  @media $break-767
    flex 0 0 100%
    max-width 100%
    padding 4em 0em 2em 0em

.Aligner-item--sm
  display flex
  flex 0 0 33.33333%
  max-width 33.33333%
  padding 0.5em 1.4em 1em 1.4em

  @media $break-767
    padding 0em
    flex 0 0 100%
    max-width 100%
    padding 0.5em 0.5em 1em 0.5em

.Aligner-item--column
  width 100%
  display flex
  flex-direction column

.Aligner-fill-column
  // display flex
  flex-grow 1

.Aligner-item--stretchHeight
  flex-grow 1
  flex-shrink 0

.Aligner-item--stretchHeight-bottom
  margin-top auto
  flex-shrink 0

.Aligner-item--top
  display flex
  align-self flex-start

.Aligner-item--bottom
  display flex
  align-self flex-end