@keyframes reveal 
  0%
    opacity 0

  100% 
    opacity 1
  

@keyframes loading 
  0%
    width .25em
  50%
    width 2.25em
  100%
    width .25em
    

.container
  width 80%
  margin auto
  
.svg-container
  width 80%
  height auto

@keyframes pulse
  from
    transform scale3d(1, 1, 1)

  50%
    transform scale3d(2, 2, 2)

  to
    transform scale3d(1, 1, 1)

.pulse
  animation-name pulse
  

.animated {
  animation-duration: .5s;
  animation-fill-mode: both;
}