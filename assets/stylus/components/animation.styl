@keyframes reveal 
  0%
    opacity 0

  100% 
    opacity 1
  

@keyframes loading 
  0%
    width .25em
  50%
    width 2.25em
  100%
    width .25em
    

.container
  width 80%
  margin auto
  
.svg-container
  width 80%
  height auto

@keyframes pulse
  from
    background-color #b1b1b1
    transform scale3d(1, 1, 1)
    
  25%
    background-color #38ea92

  30%
    transform scale3d(1.85, 1.85, 1.85)
  
  65%
    transform scale3d(1, 1, 1)
    
  75%
    background-color #a1def0

  to
    // background-color #38ea92
    background-color #b1b1b1
    // transform scale3d(1, 1, 1)
    
.pulse
  animation-name pulse

.animated
  animation-duration .9s
  animation-fill-mode both
  animation-timing-function linear