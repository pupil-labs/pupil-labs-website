.Feature--padded3
  padding 3em 
  
  @media $break-767
    padding 3em .8em 3em .8em 
    
.Feature-image--wrapper
  flex-shrink 0


.Feature-image-100vh
  display block
  height 100vh
  width auto
  align-items center
  justify-content center
  
.Feature-image
  display block
  width 100%
  height auto
  
.Feature-video-container-4by3
  position relative
  width 100%
  height 0
  padding-bottom 75%
  margin-bottom 1em
  
.Feature-video-container-3by5
  position relative
  width 100%
  height 0
  padding-bottom 60%
  margin-bottom 1em
  
.Feature-video-container-16by9
  position relative
  width 100%
  height 0
  padding-bottom 56.25%
  margin-bottom 1em
    
.Feature-video
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.Feature-image--software
  padding-top 2em
  display block
  max-width 75%
  margin-left auto
  margin-right auto
  height auto

  @media $break-767
    max-width 60%

.Feature-image--dev
  padding-top 2em
  display block
  max-width 40%
  margin-left auto
  margin-right auto
  height auto
  
  @media $break-767
    max-width 80%

.Feature-image--store
  height auto
  max-width 100%

.Feature-image--capturePlayerIcons
  display block
  margin-left auto
  margin-right auto
  width 30%
  height auto

.Feature-image--serviceIcon
  display block
  margin-left auto
  margin-right auto
  width 25%
  height auto  

.Feature-title--lg
  color $header-color
  font-size $heading-font-size
  font-weight $heading-font-weight

        
.Feature-image--configWorld
  position absolute
  width 59%
  left 0
  top 0
    
.Feature-image--configEye
  // relative positioning
  position relative
  left 0
  top 0 

.Feature-image--blog-archive--wrapper
  height 30vh
  padding-bottom 3em
  
  @media $break-767
    height 40vh

.Background-img--blog-archive
  width 100%
  height 100%
  background-position center center
  background-repeat no-repeat
  // background-attachment fixed
  margin 0px
  overflow hidden
  // position relative

.Background-img-top--blog
  margin 0px
  overflow hidden
  display block
  position relative
  width 100%
  height 65vh
  top 0
  bottom 0
  left 0
  right 0
  background-position center center
  background-repeat no-repeat  
  background-attachment fixed // set to scroll so content doesn't scroll over top
  @media $break-767
    // don't use vh on mobile due to hiding navbar it make the site jumpy.
    height 400px


.Background-img-top
  margin 0px
  overflow hidden
  display block
  position relative
  width 100%
  height 100vh
  top 0
  bottom 0
  left 0
  right 0
  background-position center center
  background-repeat no-repeat  
  background-attachment fixed // set to scroll so content doesn't scroll over top
  @media $break-767
    // don't use vh on mobile due to hiding navbar it make the site jumpy.
    height 400px

.Background-img-cover
  background-size cover

.Background-img-contain
  background-size contain !important

.Background-img--full-wh
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  background-position center center
  background-repeat no-repeat
  background-color transparent
  background-size cover
  backface-visibility: hidden

.img-placeholder
  // nothing here yet

.img-large
.img-small
.img-large--webp
  opacity 0

.img-loaded
  opacity 1
  transition opacity 0.25s linear

.img-small
  // margin 0px
  // overflow hidden
  filter blur(50px)
  transform scale(1)

.img-small--webp
  opacity 1
  filter blur(20px)
  transform scale(1)

.img-small--webp
  &.lazyloaded
    opacity 0
    transition opacity .1s linear

.img-large--webp
  &.lazyloaded
    opacity 1
    transition opacity .1s linear

.lazy-img
  margin auto
  overflow hidden

.ratio-box
  position relative
  height 0
  display block
  
.ratio-box img
.ratio-box iframe
.ratio-box video
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  display block

.Background-img--full-wh-grid
  background-position center center
  background-repeat no-repeat
  background-attachment scroll // set to scroll so content doesn't scroll over top
  width 100vw
  height 100vh

  @media $break-767
    padding 0
    padding-bottom 75%
    height 0
    background-position-y top
    
.Background-img--full-w
  background-position center center
  background-repeat no-repeat  
  background-attachment scroll // set to scroll so content doesn't scroll over top
  width 100vw
  min-height 30em

  @media $break-767
    padding 0
    padding-bottom 75%
    height 0
    background-position-y top  
    
.Background-img--full-w-fixed
  background-position center center
  background-repeat no-repeat  
  background-attachment fixed // set to scroll so content doesn't scroll over top
  width 100vw
  height 80vh
  @media $break-767
    padding 0
    padding-bottom 71.4%
    height 0
    background-position-y top
    background-size contain
    background-attachment scroll

.Background-img--full-w-grid
  background-position-x center
  background-position-y center
  background-attachment scroll
  background-repeat no-repeat  
  width 100%
  padding-bottom 75%


.Background-video-container
  position relative
  overflow hidden
  margin 0
  padding 0
  background-color #676668
  
  
.Background-video
  height 100%
  width 100%
  object-fit contain
  // video
  //   object-fit cover !important
      
.Background-img-caption-container
  transform translateY(-50%)
  position relative
  top 60%
  z-index 1
  
.Background-img-button-container
  position absolute
  z-index 1
  top calc(50% - 4em)
  left calc(50% - 6em)

.Background-img-caption
  line-height 1.1em
  color #ffffff
  

.Background-img--caption-h2
  font-size 1.3em
    
