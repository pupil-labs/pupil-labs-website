.Header-nav-item
  text-decoration none !important
  // font-family $font-family-sans-serif-alt
  cursor pointer
  font-weight 700
  color rgba(0,0,0,0.54)
  text-transform uppercase
  background-color transparent

  &:after
    content ''
    display block
    height 2px
    width 0
    background transparent
    transition width .6s ease


  
.Header-nav-active
  &:after
    content ''
    display block
    height 2px
    width 100%


.Header-cart-badge
  position absolute
  top -4px
  right -15px
  width 18px
  height 18px
  background-color #b1b1b1
  border-radius 50%
  color white
  font-size 11px
  font-weight 700
  pointer-events none
  display none
  flex-direction column
  align-items center
  justify-content center
  @media $break-767
    top 4px
    right 0px
    width 20px
    height 20px
    font-size 12px
    pointer-events auto
    a
      color rgba(0,0,0,0.54)
  
.cart-full
  display flex

.logotype
  color #4d4d4d
  
.side-nav-item
  text-decoration none !important
  // font-family $font-family-sans-serif-alt
  font-weight 700
  color rgba(0,0,0,0.54)
  text-transform uppercase

.side-nav
  position fixed
  left 0
  top 0
  z-index 2
  width 100%
  height 100%
  overflow hidden
  pointer-events none

.side-nav
  &:before
    content ''
    display block
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background rgba(255,255,255,0.5)
    opacity 0
    will-change opacity
    transition opacity 0.3s cubic-bezier(0,0,0.3,1)

.side-nav--visible
  pointer-events auto
  &.side-nav--animatable
    .side-nav__container
      transition transform 0.33s cubic-bezier(0,0,0.3,1)
  &:before
    opacity 1
  .side-nav__container
    transform none

.side-nav__container
  position relative
  width 50%
  max-width 400px
  background #FFF
  height 100%
  box-shadow 2px 0 12px rgba(0,0,0,0.4)
  transform translateX(-102%)
  display flex
  flex-direction column
  will-change transform

.side-nav--animatable
  .side-nav__container
    transition transform 0.13s cubic-bezier(0,0,0.3,1)

.side-nav__hide
  position absolute
  left 16px
  top 16px
  background none
  border none
  color #FFF
  width 24px
  height 24px
  padding 0
  margin 0

.side-nav__header
  height 64px
  background #FFF
  color gray
  display flex
  padding 16px
  align-items flex-end
  font-size 24px

.side-nav__content
  padding-top 32px
  flex 1
  list-style none
  margin 0
  overflow-x hidden
  overflow-y auto
  overflow-scrolling touch
  li
    height 48px
    line-height 48px
    padding-left 34px
    padding-right 34px
    font-size 14px
    &:hover
      background rgba(0,0,0,0.1)
