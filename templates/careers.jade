extends layout

block append title
  | #{ " - " + page.title}

block main
  div(id="Jobs").Site-transform
    //- Title block
    - var page_data = contents.careers['index.json']
    - var page_meta = page_data.metadata
    - var titleData = {'title':page_meta.title,'s1':page_meta.subtitle}    
    //- include includes/title

    -var positions_folder = contents.careers['positions']
    
    //- show background image
    div.Background-img-top.Background-img-cover
      figure(class="img-placeholder" data-src="../media/images/jobs/jobs_workbench.jpg")
        div(class="Background-img--full-wh img-loaded img-small" style="background-image: url('data:image/jpeg;base64,');")

        div(class="Background-img--full-wh img-large" data-src="../media/images/jobs/jobs_workbench.jpg")        
      div(style="top:50%;").Site-content-container.Background-img-caption-container.u-textCenter
        h1.Background-img-caption Join the team.


    - var positions = _.chain(positions_folder._.pages).sortBy(function(item) {
    -   return item.metadata['order'];
    - }).filter(function(item){return item.metadata['order'] > -1}).value()
    
    section.Site-gray-bkg
      div.Site-content-container
        div.Feature-container-column
          div.Grid.Grid--justifyCenter.Grid--center.Grid--alignContentCenter.Feature-row
            div.Grid-cell.Grid-cell--full.u-textCenter
              div.Feature
                h1 Current Opportunities
              div.Grid.Grid--justifySpaceBetween
                each p in positions
                  div.Footer--cell.u-padBottom--0
                    h3 #[a(href="#"+p.metadata.jobTitle)= p.title]

    div.Site-content-container
      div.Grid.u-padTop--3.u-padBottom--3
        each p in positions
          div.Grid-cell.Grid-cell--full.u-padBottom--2
            div.Article.Feature--job-item.u-padTop--2
              a(class='anchor' name=p.metadata.jobTitle)
              h2(id=p.metadata.order)= p.title
              div!= typogr(p.html).typogrify()
              a(href="mailto:jobs@pupil-labs.com" target="_blank" rel="noopener" role="button" class="Button") email us to apply
              p.Cart-disclaimerTxt.u-textCenter (please include your cv and links to relevant work)
