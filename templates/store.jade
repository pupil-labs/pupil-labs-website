extends layout

block append title
  | #{ " - " + page.title}

block page_scripts
    script.
      
      let event = "'webkitAnimationEnd', 'mozAnimationEnd', 'MSAnimationEnd', 'oanimationend', 'animationend'";
      
      function Animate(x){
        let cart = document.getElementById('animation');
        
        cart.classList.remove(x, "animated");
        cart.classList.add(x, "animated");
        cart.addEventListener('animationend', function(event) {
          event.target.removeEventListener(event.type, arguments.callee);
          cart.classList.remove(x, "animated");
        }, false);
      };

      document.addEventListener("DOMContentLoaded", function() {
        let addcart = document.getElementsByClassName('Button-store');
        for (var i = 0; i < addcart.length; i++) {
          addcart[i].addEventListener("click", function(e) {
            e.preventDefault();
            Animate("pulse");
          }, false);
        };
      });

block main
  div(id="Store")
    - var page_data = contents.store['index.json']
    - var page_meta = page_data.metadata


    //- Free Shipping banner
    section.Banner
      div.Banner-content-container
        div.Grid.Grid--justifyCenter.Grid--center.Grid--alignContentCenter
          div.Grid-cell.u-textCenter
            h3(style="color: #fff").u-padBottom--0 Made in Berlin
          div.Grid-cell.u-textCenter
            i(style="display: inline; font-size: 36px; color: #fff;").u-textCenter.material-icons public
          div.Grid-cell.u-textCenter
            h3(style="color: #fff;").u-padBottom--0 Ships Worldwide



    //- Pupil section
